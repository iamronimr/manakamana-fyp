  <script>
    let sidebar = document.querySelector(".sidebar");
    let sidebarBtn = document.querySelector(".sidebarBtn");
    sidebarBtn.onclick = function () {
      sidebar.classList.toggle("active");
      if (sidebar.classList.contains("active")) {
        sidebarBtn.classList.replace("bx-menu", "bx-menu-alt-right");
      } else sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
    };


    function logout() {
      console.log('Logout')
      // Clear local storage
      localStorage.removeItem('token');
      localStorage.removeItem('role');
      window.location.href = "/";
    }

    // for adding workers
    document.getElementById('addWorker').addEventListener('submit', function (event) {
      event.preventDefault();
      const formData = new FormData(event.target);

      // Send POST request to backend
      axios.post('http://localhost:3000/workers/registerworker', formData)
        .then(function (response) {
          alert(response.data.message);
          window.location.href = "/manage_worker"
        })
        .catch(function (error) {
          alert(error.response.data.message);
        });
    });

    // for editing workers
    document.getElementById('editWorker').addEventListener('submit', function (event) {
      event.preventDefault();
      console.log('hello')
      const formData = new FormData(event.target);
      const workerId = formData.get('editWorkerId');
      const payload = {
        fullname_edit: formData.get('fullname_edit'),
        description_edit: formData.get('description_edit'),
        servicetype_edit: formData.get('category_edit'),
        contact_edit: formData.get('contact_edit')
      }

      // Send Patch request to backend
      axios.patch(`http://localhost:3000/workers/${workerId}`, formData)
        .then(function (response) {
          alert(response.data.message);
          window.location.href = "/manage_worker"
        })
        .catch(function (error) {
          alert(error.response.data.message);
        });

    });

    let workerlist;

    // Fetch workers from backend API
    axios.get('http://localhost:3000/workers')
      .then(function (response) {

        // Handle successful response
        workerlist = response.data;
        const workersContainer = document.getElementById('data');
        workerlist.forEach(function (worker) {
          const workerElement = document.createElement('tr');
          workerElement.innerHTML = `
            <td><img src="workers/${worker.photo}" height="250px" width="200px" /></td>
            <td>${worker.fullname}</td>
            <td>${worker.contact}</td>
            <td>${worker.servicetype}</td>
            <td>${worker.address}</td>
            <td>
                <button type="button" class="btn btn-primary btn-sm"  data-toggle="modal" data-target="#editModal" onclick="editWorker('${worker.id}')">Edit</button>
                <button type="button" class="btn btn-danger btn-sm" onclick="deleteWorker('${worker.id}')">Delete</button>
            </td>
                    `;
          workersContainer.appendChild(workerElement);
        });
      })
      .catch(function (error) {
        // Handle error
        console.error('Error fetching workers:', error);
      });

    function fillEditWorkerModal(worker) {
      console.log(worker)
      // Fill the input fields with worker data
      document.getElementById('fullname_edit').value = worker.fullname;
      document.getElementById('description_edit').value = worker.description;
      document.getElementById('contact_edit').value = worker.contact;
      document.getElementById('servicetype_edit').value = worker.servicetype;
      document.getElementById('address_edit').value = worker.address;


      // Change the modal title to indicate editing
      document.getElementById('label').innerText = 'Edit Worker';

      // Change the button label to "Update"
      document.getElementById('modalfunction').innerText = 'Update';
    }

    // Function to handle edit worker action
    function editWorker(workerId) {
      console.log('Edit worker with ID:', workerId);
      const worker = workerlist.find(p => p.id === workerId);
      console.log(worker);
      fillEditWorkerModal(worker);
      document.getElementById('editWorkerId').value = workerId;
    }

    // Function to handle delete worker action
    function deleteWorker(workerId) {
      // Send Delete request to backend
      axios.delete(`http://localhost:3000/workers/${workerId}`)
        .then(function (response) {
          alert('Worker Deleted Successfully')
          window.location.href = "/manage_worker"
        })
        .catch(function (error) {
          alert(error.response.data.message);
        });
    }
  </script>
