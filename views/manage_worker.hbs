      {{!-- for adding worker --}}
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="label">Add new Workers</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              {{!-- Form Fields --}}
              <form id="addWorker" method="post">
                <h2>Enter Workers Detail</h2>
                <div class="form-group">
                  <label for="name">FullName</label>
                  <input type="text" id="fullname" name="fullname" required />
                </div>
                <div class="form-group">
                  <label for="pdesc">Description</label>
                  <input type="text" id="description" name="description" required />
                </div>
                <div class="form-group">
                  <label for="price">Contact</label>
                  <input type="number" id="contact" name="contact" required />
                </div>
                <div class="form-group">
                  <label for="category">Service Type</label>
                  <input type="text" id="servicetype" name="servicetype" required />
                </div>
                <div class="form-group">
                  <label for="category">Address</label>
                  <input type="text" id="address" name="address" required />
