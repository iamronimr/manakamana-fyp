    <div class="home-content">
      <h1>Workers Data</h1>

      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Add Worker
      </button>
      <table class="table">
        <thead class="thead-primary">
          <tr>
            <th>Image</th>
            <th>Fullname</th>
            <th>Contact</th>
            <th>Service Type</th>
            <th>Address</th>
            <th>Action</th>
