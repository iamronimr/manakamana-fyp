            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" id="modalfunction">Add</button>
            </div>
            </form>
          </div>
        </div>
      </div>

      {{!-- for editing worker --}}
      <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="label">Edit Workers</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              {{!-- Form Fields --}}
              <form id="editWorker" method="post">
                <input type="hidden" id="editWorkerId" name="editWorkerId" value="">
                <h2>Enter Workers Detail</h2>
                <div class="form-group">
                  <label for="name">FullName</label>
                  <input type="text" id="fullname_edit" name="fullname_edit" />
                </div>
                <div class="form-group">
                  <label for="pdesc">Description</label>
                  <input type="text" id="description_edit" name="description_edit" />
                </div>
                <div class="form-group">
                  <label for="price">Contact</label>
                  <input type="number" id="contact_edit" name="contact_edit" />
                </div>
                <div class="form-group">
                  <label for="category">Service Type</label>
                  <input type="text" id="servicetype_edit" name="servicetype_edit" />
                </div>

                <div class="form-group">
                  <label for="address">Address</label>
                  <input type="text" id="address_edit" name="address_edit" required />
                </div>

                <div class="form-group">
                  <label for="worker_image">Worker Image</label>
                  <input type="file" id="photo" name="photo" />
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary" id="modalfunction">Update</button>
                </div>
              </form>
