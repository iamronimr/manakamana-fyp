    <script>

        // Fetch workers from backend API
        axios.get('http://localhost:3000/workers')
            .then(function (response) {
                // Handle successful response
                const workerlist = response.data;
                const workersContainer = document.getElementById('workers');
                workerlist.forEach(function (worker) {
                    const workerElement = document.createElement('div');
                    workerElement.classList.add('col-lg-4', 'col-md-6', 'col-sm-12', 'pb-1');
                    workerElement.innerHTML = `
                        <div class="card worker-item border-0 mb-4" style="height: 300px;>
                            <div class="card-header worker-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="workers/${worker.photo}" alt="" style=" height: 300px;">
                            </div>

                             <div class="card-body border-left border-right text-Left p-0 pt-0 pb-2">
                                <h6 class="text-truncate mb-3">Name: ${worker.fullname}</h6>
                                <h6 class="text-truncate mb-3">Service Type: ${worker.servicetype}</h6>                                                
                            </div>
                            
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <button class="btn btn-sm text-dark p-0 view-details" data-worker-id="${worker.id}"">
                                <i class="fas fa-eye text-primary mr-1"></i>View Detail</button>
                                <button class="btn btn-sm text-dark p-0 hire-worker" data-worker-id="${worker.id}">
                                <i class="fas fa-shopping-cart text-primary mr-1"></i>Hire Now</button>
                            </div>
                        </div>
                    `;
                    workersContainer.appendChild(workerElement);

                    workerElement.addEventListener('click', function (event) {
                        if (event.target.classList.contains('hire-worker')) {
                            const workerId = event.target.dataset.workerId;
                            hireWorker(workerId);
                        }
                    })
                    workerElement.addEventListener('click', function (event) {
                        if (event.target.classList.contains('view-details')) {
                            const workerId = event.target.dataset.workerId;
                            getWorkerDetailsById(workerId);
                        }
                    })


                });
            })
            .catch(function (error) {
                // Handle error
                console.error('Error fetching workers:', error);
            });

        function hireWorker(worker_id) {
            console.log(worker_id);
            const token = localStorage.getItem('token');
            axios.post(`http://localhost:3000/workers/hire-worker`, { worker_id }, {
                headers: {
                    'Authorization': `Bearer ${token}`
                }
            }).then(function (response) {
                alert('Woker Hired!!.')
            }).catch(function (error) {
                alert(error.response.data.message);
            })
        }

        function getWorkerDetailsById(worker_id) {
            axios.get(`http://localhost:3000/workers/${worker_id}`)
                .then(function (response) {
                    const workerdetails = response.data;
                    // Populate modal with worker details
                    const modalBody = document.querySelector('#descmodal .modal-body');

                    modalBody.innerHTML = `       
            <h2 class="text-truncate mb-1">${workerdetails.fullname}'s Details</h2>
            <div class="card worker-item border-0 mb-4" style="height: 300px;>
                <div class="card-header worker-img position-relative overflow-hidden bg-transparent border p-0">
                   <img class="img-fluid w-100" src="workers/${workerdetails.photo}" alt="" style=" height: 300px;">
                </div>
            </div>
            <h6 class="text-truncate mb-1">Servicetype: ${workerdetails.servicetype}</h6>
            <h6 class="text-truncate mb-1">Address: ${workerdetails.address}</h6>
            <h6 class="text-truncate mb-1">Ph.No: ${workerdetails.contact}</h6>            
            <div class="worker-description" style="max-height: 100px; overflow-y: auto; column-count: 1; column-gap: 20px;">
                Info: ${workerdetails.description}
            </div>
            `;

                    // Show the modal
                    $('#descmodal').modal('show');
                })
                .catch(function (error) {
                    // Handle error
                    console.error('Error fetching workers:', error);
                });
        }

